// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/marcosgomesneto/bun-devcontainers/tree/main/src/basic-bun
{
	"name": "Bun",
	"image": "oven/bun:slim",
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"biomejs.biome"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2.5.6": {
			"username": "vscode",
			"installZsh": true
		},
	},
	"containerEnv": {
		"LANG": "en_US.UTF-8"
	},
	"remoteUser": "vscode",
	"runArgs": [
		"--env-file",
		".devcontainer/.env"
	]
}
